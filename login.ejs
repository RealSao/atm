//html code for login screne
<div class="login">
  <h1>Login to GTM 2.0</h1>
  <% if (messages.error) { %>
    <%= messages.error %>
  <% } %>
    
  <form  action="/api/user/login" method="POST">
      <link rel="stylesheet" type = "text/css" href="/loginstyle.css">
    <p><input type="text" id="email" name="email" value="" placeholder="Email"></p>
    <p><input type="password" id = "password" name="password" value="" placeholder="Password"></p>
    <p class="remember_me">
      <label>
        <input type="checkbox" name="remember_me" id="remember_me">
        Remember me on this computer
      </label>
    </p>
    <p class="submit"><input type="submit" value="Login"></p>
  </form>
</div>
  

    
<div class="new-account">
  <p>Don't have an account? <a href="/api/user/registerPage">Click here.</a></p><!--Link to registration page goes here <-- behind href-->
</div>
